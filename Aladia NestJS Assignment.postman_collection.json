					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Parse the response JSON\r",
									"const res = pm.response.json();\r",
									"\r",
									"// Make sure the structure matches\r",
									"if (res.tokens) {\r",
									"  if (res.tokens.accessToken) {\r",
									"    pm.environment.set('accessToken', res.tokens.accessToken);\r",
									"    console.log('✅ Access token saved to environment');\r",
									"  }\r",
									"\r",
									"  if (res.tokens.refreshToken) {\r",
									"    pm.environment.set('refreshToken', res.tokens.refreshToken);\r",
									"    console.log('✅ Refresh token saved to environment');\r",
									"  }\r",
									"\r",
									"  if (res.tokens.expiresAt) {\r",
									"    pm.environment.set('accessTokenExpiresAt', res.tokens.expiresAt);\r",
									"    console.log('✅ Token expiration saved');\r",
									"  }\r",
									"} else {\r",
									"  console.warn('⚠️ No tokens found in response');\r",
									"}\r",
									""
